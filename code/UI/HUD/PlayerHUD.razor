@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent;
@attribute [StyleSheet]


<root>
    <Crosshair />
    <KillFeed />

     <div class="main">
        @for (int i = 0; i < disks; i++)
        {
            <img class="disk" src="@diskTexture" />
        }
    </div>
</root>

@code
{
    public KillFeed KillFeed { get; set; } = new();

    private string diskTexture = "/ui/disk.png";
    private int disks = 3;

    public void ChangeDisks(int disks)
    {
        this.disks = disks;
        StateHasChanged();
    }

    [Broadcast]
    public void Test()
    {
        Log.Info("Hello World");
    }
}
