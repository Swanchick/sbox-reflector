@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent;
@attribute [StyleSheet]


<root>
    <crosshair />
    <killFeed />

    <div class="main">
        @for (int i = 0; i < disks; i++)
        {
            <img class="disk" src="@diskTexture" />
        }
    </div>
</root>

@code
{
    private string diskTexture = "/ui/disk.png";

    private int disks = 3;

    private KillFeed killFeed = new();
    private Crosshair crosshair = new();

    protected override void OnStart()
    {
        killFeed.Test("Test 1", "Test 2");
    }

    public void ChangeDisks( int disks )
    {
        this.disks = disks;

        StateHasChanged();
    }
}
