@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent;
@attribute [StyleSheet]


<root>
    <Crosshair />

    <div class="main">
        @for (int i = 0; i < disks; i++)
        {
            <img class="disk" src="@diskTexture" />
        }
    </div>
</root>

@code
{
    private string diskTexture = "/ui/disk.png";

    private int disks = 3;

    protected override void OnStart()
    {
        Log.Info("Hello World Menu");
    }

    public void ChangeDisks( int disks )
    {
        this.disks = disks;

        StateHasChanged();
    }
}
