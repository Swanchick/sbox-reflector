@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent;
@attribute [StyleSheet]


<root>
    <Crosshair />

     <div class="main">
        @for (int i = 0; i < disks; i++)
        {
            <img class="disk" src="@diskTexture" />
        }
    </div>

    @* <img class="logo" src="@reflector"> *@
</root>

@code
{
    private string diskTexture = "/ui/disk.png";
    private string reflector = "/ui/reflector.png";
    private int disks = 3;

    public void ChangeDisks( int disks )
    {
        this.disks = disks;

        StateHasChanged();
    }
}
