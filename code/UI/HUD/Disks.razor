@using Sandbox;
@using Sandbox.UI;
@inherits Panel;

@attribute [StyleSheet]

<root>
    <div class="main">
        @for (int i = 0; i < _disks; i++)
        {
            <img class="disk" src="@_diskTexture" />
        }
    </div>
</root>


@code 
{
    private string _diskTexture = "/ui/disk.png";

    private int _disks = 3;

    public void ChangeDisks(int disks)
    {
        _disks = disks;

        StateHasChanged();
    }
}
